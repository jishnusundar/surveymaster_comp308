<% include ../partials/header.ejs %>
<body>

    
<div class="outer-box">
    <div class="page-header">
    <h1>User Registration</h1>
    </div>
    <!-- Render the Registration form  -->
	<main class="outerbox">
	<!-- Display flash messages  -->
	<% if (typeof(messages)== String && messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
      <% } %>
		<div class="row">
            <div class="col-md-offset-4 col-md-4">
              
                <form method="post" class="form-group">
                    <div class="form-group">
                        <label for="email">Email: *</label>
                        <input name="email" type="email" class="form-control" required autofocus />
                    </div>
                    <div class="form-group">
                        <label for="username">Username: *</label>
                        <input name="username" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password: *</label>
                        <input id="password" name="password" type="password" class="form-control" required />
                    </div>
                     <div class="form-group">
                        <label for="password">Confirm Password: *</label>
                        <input id="confirm_password"  type="password" class="form-control" required />
                    </div>
                   
                    <div class="form-group text-right">
                        <input type="submit" id="submit_Button" class="btn btn-info" value="Submit"/>
                        <a href="/">
                            <input type="button" class="btn btn-info" value="Cancel"/>
                        </a>
                    </div>
                </form>
            </div>
        </div>

      
</div>

</body>

